#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../@sap/ux-ui5-tooling/bin/fiori" "$@"
else 
  exec node  "$basedir/../@sap/ux-ui5-tooling/bin/fiori" "$@"
fi
